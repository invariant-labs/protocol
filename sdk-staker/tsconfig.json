{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}